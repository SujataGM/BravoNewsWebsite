@model WeatherForecast

<div class="container">
<div class="input-group col-md-4">
        <input class="" type="search" value="Search . . ." id="example-search-input" style="width:20%; text-align:center;">
    <span class="@*input-group-append*@">

            <button class="btn btn-outline-secondary" type="button" style="  background-color:blue;color:white; text-align:center;">
            <i class="fa fa-search"></i>
        </button>
    </span>
</div>
<br />
@if(Model != null){

        <section class="vh-100">
            
        <div class="container py-0 h-50" >

           
                <div class="col-md-8 col-lg-6 col-xl-4">

                <div class="card" style="background-color:#04477e;color:white; width:100%;border-radius: 40px;padding:0px; ">
                        
                        <div class="card-body p-4">

                            <div class="d-flex">
                                <h6 class="flex-grow-1">@Model.City</h6>
                           
                            </div>

                            <div class="d-flex flex-column text-center mt-5 mb-4">
                                <h6 class="display-4 mb-0 font-weight-bold" style="color:white;"> @Model.TemperatureC </h6>
                                <span class="small" style="color: White">@Model.Summary</span>
                            </div>

                           <div class="d-flex align-items-center">
                                <div class="flex-grow-1" style="font-size: 1rem;">
                                    <div>
                                       <i class="bi bi-wind"></i> <span class="ms-1">
                                            @Model.WindSpeed m/s
                                        </span>
                                    </div>
                                    <div>
                                       <i class="fas fa-humidity"></i> <span class="ms-1"> Humidity @Model.Humidity% </span>
                                    </div>
                                   
                                </div>
                              <div>
                                </div>

                              </div>
                            </div>

                        </div>
                    </div>

                </div>
        </section>
    
      
  
 
}
</div>