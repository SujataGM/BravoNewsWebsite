@model IEnumerable<BravoNews.Models.ViewModels.UserVM>

@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<br />

<div class="container"  style="text-align:center">
    <div class="row">
        <div class="col-6" style="width:300px; text-align:left; padding-left:50px">
            <form asp-action="RoleAssignment">
                <div class="form-group">
                    <label for="exampleInputEmail1">User Name/Email</label>
                    <input type="text" class="form-control" id="userName" name="userName" aria-describedby="User name" placeholder="Enter username">
                    <br />
                </div>
                <div class="container">
                    <div>
                        <tr>
                            <th>
                                <h2>Assign Roles</h2>
                            </th>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radio" value="Administrator">
                                    <label class="form-check-label" for="RoleAssignment">
                                        Admin
                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radio" value="Editor">
                                    <label class="form-check-label" for="RoleAssignment">
                                        Editor
                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radio" value="Journalist">
                                    <label class="form-check-label" for="RoleAssignment">
                                        Journalist
                                    </label>
                                </div>
                            </td>
                        </tr>
                    </div>
                    <br />
                    <br />
                    <div>
                        <tr>
                            <th>
                                <h2>Remove Roles</h2>
                            </th>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radioR" value="Administrator">
                                    <label class="form-check-label" for="RoleAssignment">
                                        Admin
                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radioR" value="Editor">
                                    <label class="form-check-label" for="RoleAssignment">
                                        Editor
                                    </label>
                                </div>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radioR" value="Journalist">
                                    <label class="form-check-label" for="RoleAssignment">
                                        Journalist
                                    </label>
                                </div>
                            </td>
                        </tr>
                    </div>
                </div>
                <br />
                <div style="text-align:center">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>
            </form>
        </div>

        <br />
        <div class="col-6" style="float:left; padding-left:70px;">
            <h2>StaffRole List</h2>
            <br />
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span><strong>@item.UserName</strong></span></td>
                    </tr>
                    <br />
                    @foreach (var ite in item.Roles)
                    {

                        <tr>
                            <td><span><strong>@ite</strong></span></td>
                        </tr>
                    }
                    <br />
                    <br />
                }
            }
        </div>
    </div>
    <br /><br />
    <div>
        <a href="AdminPages" class="btn btn-link btn-lg" role="button">Back</a>
    </div>
</div>