@{

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE HTML>
<html>
    <head>
        <script>
window.onload = function() {

    var chart = new CanvasJS.Chart("chartContainer", {
        theme: "light1",
        exportEnabled: true,
        animationEnabled: true,
        title: {
            text: "Article distribution"
        },
        subtitles: [{
            text: "Last four months"
        }],
        data: [{
            type: "pie",
            startAngle: 180,
            toolTipContent: "<b>{label}</b>: {y} Articles",
            showInLegend: "true",
            legendText: "{label}",
            indexLabel: "{label} - {y} Articles",
            dataPoints: @Html.Raw(ViewBag.DataPoints)
        }]
    });
    chart.render();
}

        </script>
    </head>
    
    <body>
       <br />
       <br />
        <div class="container">
        <div id="chartContainer"></div>
        
